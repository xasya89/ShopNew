@page "/"
@using ShopNew.DAL.Models
@attribute [Authorize]

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.
<span>@shop?.Name</span>

<SurveyPrompt Title="How is Blazor working for you?" />

<AuthorizeView>
    <Authorized>
        <h2>Авторизован</h2>
    </Authorized>
    <NotAuthorized>
        <h2>Не авторизаован</h2>
    </NotAuthorized>
</AuthorizeView>

@code{
    [CascadingParameter(Name = "Shop")]
    Shop shop{ get; set; }
}